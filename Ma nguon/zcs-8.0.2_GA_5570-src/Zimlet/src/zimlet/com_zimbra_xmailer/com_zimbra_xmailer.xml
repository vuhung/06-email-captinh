<zimlet name="com_zimbra_xmailer" version="1.4" label="${msg.label}" description="${msg.description}">
	<include>xmailer.js</include>
	<includeCSS>xmailer.css</includeCSS>
	<resource>xmailer-icon.gif</resource>
	<handlerObject>com_zimbra_xmailer_HandlerObject</handlerObject>
	<zimletPanelItem label="${msg.XMailerZimlet_panel_label}" icon="xmailer-panelIcon">
		<toolTipText>${XMailerZimlet_panel_tooltip}</toolTipText>
	</zimletPanelItem>
	<userProperties>
		<property type="string" name="turnONxmailerZimlet" value="true"/>
	</userProperties>	
</zimlet>
