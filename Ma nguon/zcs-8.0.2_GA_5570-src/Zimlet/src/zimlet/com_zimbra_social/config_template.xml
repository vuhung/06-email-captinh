<zimletConfig name="com_zimbra_social" version="3.6">
    <global>
        <property name="allowedDomains">zimbraoauth2support.cloudfoundry.com,twitter.com,*.twitter.com,*.facebook.com,*.tweetmeme.com,api.tr.im,*.digg.com,api.bit.ly,*.socialcast.com</property>

        <!--
        <property name="hasSensitiveData">true</property>
          Set hasSensitiveData to true to disable this Zimlet when Zimbra Web Client is used in http mode.
            PS:
            - This property is ignored in Zimbra Desktop and in localhost
            - Supported from Zimbra 7.1.3 onwards
        -->
        <property name="hasSensitiveData">true</property>
        <property name="OAUTH2_SERVER">https://zimbraoauth2support.cloudfoundry.com/facebook/oauth2.jsp</property>
    </global>
</zimletConfig>